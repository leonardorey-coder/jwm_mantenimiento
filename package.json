{
  "name": "jw-mantto",
  "version": "1.3.0",
  "description": "JW Mantto - Sistema de GestiÃ³n de Mantenimiento (PWA + PostgreSQL)",
  "main": "main.js",
  "author": {
    "name": "JW Marriott",
    "email": "mantto@jwmarriott.com"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "prod": "NODE_ENV=production node server.js",
    "setup:postgres": "./scripts/setup-postgres.sh",
    "vercel": "vercel",
    "vercel:dev": "vercel dev",
    "vercel:build": "vercel build",
    "vercel:deploy": "vercel --prod",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "dist": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:portable": "electron-builder --win portable",
    "lint:js": "eslint .",
    "check:duplication": "jscpd",
    "lint:css": "stylelint \"**/*.css\"",
    "format": "prettier --write \"**/*.{js,cjs,mjs,css,html,json,md}\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "electron-store": "^11.0.2",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.13.1",
    "pg-connection-string": "^2.6.2",
    "uploadthing": "^7.7.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jscpd": "^4.0.5",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  },
  "build": {
    "appId": "com.jwmarriott.mantto",
    "productName": "JW Mantto",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.cache/**/*",
      "!dist/**/*",
      "!dist-electron/**/*",
      "!.git/**/*",
      "!.vercel/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icons/icon.ico",
      "uninstallerIcon": "icons/icon.ico"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "mantenimiento",
    "hotel",
    "pwa",
    "postgresql",
    "jw-marriott",
    "habitaciones",
    "offline-first",
    "electron",
    "desktop"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/leonardorey-coder/jwm_mantenimiento.git"
  },
  "license": "UNLICENSED",
  "private": true
}
